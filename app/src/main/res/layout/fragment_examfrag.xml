<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exam_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".examfrag">

    <Spinner
        android:id="@+id/spinkro"
        android:layout_width="@dimen/_231sdp"
        android:layout_height="@dimen/_23sdp"
        android:layout_marginTop="@dimen/_23sdp"
        android:elevation="5dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#5664F5"
        android:gravity="center_vertical"
        android:outlineAmbientShadowColor="#000"
        android:paddingStart="@dimen/_8sdp"
        android:popupBackground="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_23sdp"
        android:fontFamily="@font/raleway_semibold"
        android:text="Click on the below button to\nenter the date of your exam"
        android:textColor="#000"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinkro" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_31sdp"
        android:fontFamily="@font/raleway_semibold"
        android:text="Choose Your Exam"
        android:textColor="#000"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_154sdp"
        android:layout_height="@dimen/_231sdp"
        android:layout_marginTop="@dimen/_35sdp"

        app:cardCornerRadius="@dimen/_13sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datep">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_27sdp"
                android:layout_marginTop="@dimen/_31sdp"
                android:fontFamily="@font/inter_bold"
                android:text="Days Left"
                android:textColor="#989AA6"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="@dimen/_51sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginStart="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:src="@drawable/ntta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_27sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_21sdp"
                android:fontFamily="@font/inter_bold"
                android:text="1 Jan 2023"
                android:textColor="#989AA6"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/examtxt" />

            <TextView
                android:id="@+id/examtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_27sdp"
                android:layout_marginTop="@dimen/_22sdp"
                android:fontFamily="@font/inter_bold"
                android:text="JEE Adv"
                android:textColor="#000"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView65" />

            <TextView
                android:id="@+id/textView65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_27sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:fontFamily="@font/inter_medium"
                android:text="0"
                android:textColor="#F8393F"
                android:textSize="@dimen/_57ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="  "
                android:textColor="#000"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="@+id/examtxt"
                app:layout_constraintStart_toEndOf="@+id/examtxt"
                app:layout_constraintTop_toTopOf="@+id/examtxt"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/datep"
        android:layout_width="@dimen/_52sdp"
        android:layout_height="@dimen/_52sdp"
        android:layout_marginTop="@dimen/_23sdp"
        android:src="@drawable/calendar789"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtview" />

</androidx.constraintlayout.widget.ConstraintLayout>