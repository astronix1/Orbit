<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".Signup">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/inter_bold"
        android:text="Sign up to Orbit"
        android:textColor="#FFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signupG"
        android:layout_width="306dp"
        android:layout_height="56dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="#000"
        android:drawableLeft="@drawable/search"
        android:fontFamily="@font/inter_bold"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        android:text="Sign up with Google"
        android:textColor="#FFF"
        android:textSize="15sp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:rippleColor="#50FFFFFF" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/inter_bold"
        android:text="Or continue with Email"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupG" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupG"
        app:srcCompat="@drawable/line" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/signupG"
        app:srcCompat="@drawable/line" />

    <EditText
        android:id="@+id/namefield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/rect_txt"
        android:elevation="4dp"
        android:ems="10"
        android:fontFamily="@font/inter_medium"
        android:gravity="center_vertical"
        android:hint="Enter your name"
        android:inputType="text"
        android:paddingStart="18dp"
        android:textColor="#000"
        android:textColorHint="#4F4F4F"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/pwdfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/rect_txt"
        android:elevation="4dp"
        android:ems="10"
        android:fontFamily="@font/inter_medium"
        android:gravity="center_vertical"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:paddingStart="18dp"
        android:textColor="#000"
        android:textColorHint="#4F4F4F"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailfield" />

    <EditText
        android:id="@+id/emailfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/rect_txt"
        android:elevation="4dp"
        android:ems="10"
        android:fontFamily="@font/inter_medium"
        android:gravity="center_vertical"
        android:hint="Enter Email"
        android:inputType="text"
        android:paddingStart="18dp"
        android:textColor="#000"
        android:textColorHint="#4F4F4F"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernamefield" />

    <EditText
        android:id="@+id/usernamefield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/rect_txt"
        android:elevation="4dp"
        android:ems="10"
        android:fontFamily="@font/inter_medium"
        android:gravity="center_vertical"
        android:hint="Enter username"
        android:inputType="text"
        android:paddingStart="18dp"
        android:textColor="#000"
        android:textColorHint="#4F4F4F"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namefield" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter_bold"
        android:text="I agree with the Terms of Service and Privacy\npolicy"
        android:textColor="#FFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwdfield" />

    <Button
        android:id="@+id/createacc"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#000"
        android:fontFamily="@font/inter_bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="Create Account"
        android:textColor="#FFF"
        android:textSize="15sp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="@+id/checkBox"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        app:rippleColor="#50FFFFFF" />

    <TextView
        android:id="@+id/ahaccc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/inter_bold"
        android:text="Already have an account?"
        android:textColor="#FFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/createacc"
        app:layout_constraintStart_toStartOf="@+id/createacc"
        app:layout_constraintTop_toBottomOf="@+id/createacc" />

    <TextView
        android:id="@+id/logintxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/inter_bold"
        android:text="Login"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/ahaccc"
        app:layout_constraintStart_toStartOf="@+id/ahaccc"
        app:layout_constraintTop_toBottomOf="@+id/ahaccc" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="101dp"
        android:layout_height="232dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/whoa17" />

</androidx.constraintlayout.widget.ConstraintLayout>